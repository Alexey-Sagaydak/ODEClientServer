<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Решение систем ОДУ" Height="700" Width="1100" Icon="../resources/logo.ico">

    <Window.Resources>
        <!-- Черно-белый стиль кнопок -->
        <Style x:Key="BlackWhiteButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3" FontSize="16" Background="WhiteSmoke" ItemContainerStyle="{StaticResource MenuItemStyle}">
            <MenuItem Header="Справка" ItemContainerStyle="{StaticResource MenuItemStyle}">
                <MenuItem Header="Вызов справки" Command="{Binding HelpCommand}">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="QuestionMarkCircleOutline"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="О программе" Command="{Binding AboutCommand}">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="AboutCircleOutline"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Margin="10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ComboBox x:Name="EquationSelector" Margin="0,0,0,20"
                  SelectionChanged="EquationSelector_SelectionChanged"
                  FontSize="16" Padding="10">
                <ComboBoxItem>Уравнение Ван дер Поля</ComboBoxItem>
                <ComboBoxItem>Принужденный осциллятор</ComboBoxItem>
                <ComboBoxItem>Система Робертсона</ComboBoxItem>
            </ComboBox>

            <!-- Формула -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <TextBlock x:Name="EquationFormula" Text="Выберите уравнение"
                       TextWrapping="Wrap" FontSize="16"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       TextAlignment="Center" FontWeight="Bold"/>
            </Border>

            <!-- Параметры и кнопка -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top">
                <TextBlock Text="Параметры:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                <StackPanel Grid.Row="2" VerticalAlignment="Top">
                    <TextBlock Text="Параметры:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                    <!-- Поля параметров -->
                    <StackPanel x:Name="ParametersPanel" Margin="0,0,0,20">
                        <!-- Параметры добавляются динамически -->
                    </StackPanel>

                    <!-- Комбобоксы для зависимости переменных -->
                    <StackPanel>
                        <!-- Первый комбобокс для выбора зависимой переменной -->
                        <ComboBox x:Name="FirstDependencySelector" Margin="0,0,0,10"
                          FontSize="16" Padding="10">
                            <!-- Будет заполняться динамически -->
                        </ComboBox>

                        <!-- Второй комбобокс для выбора еще одной зависимой переменной -->
                        <ComboBox x:Name="SecondDependencySelector" Margin="0,0,0,20"
                          FontSize="16" Padding="10">
                            <!-- Будет заполняться динамически -->
                        </ComboBox>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Кнопка запуска -->
                        <Button Width="150" Style="{StaticResource BlackWhiteButtonStyle}">
                            <materialDesign:PackIcon Kind="Play" Margin="0,0,10,0"/>
                        </Button>

                        <!-- Кнопка сброса -->
                        <Button Width="150" Style="{StaticResource BlackWhiteButtonStyle}">
                            <materialDesign:PackIcon Kind="Refresh" Margin="0,0,10,0"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="1" ShowsPreview="False" Width="5" VerticalAlignment="Stretch" Background="Gray"/>

        <lvc:CartesianChart Grid.Row="1" Grid.Column="2" Series="{Binding SeriesCollection}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="X Axis"
                          Labels="{Binding Labels}" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Y Axis" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>