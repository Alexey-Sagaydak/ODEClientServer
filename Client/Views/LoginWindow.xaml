<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Вход" Height="350" Width="450" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#f5f5f5">
    <Grid>
        <materialDesign:Card Padding="50" HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Height="350">
            <StackPanel>
                <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" FontSize="16"
                             materialDesign:HintAssist.Hint="Введите логин"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Пароль" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" FontSize="16"
                                 materialDesign:HintAssist.Hint="Введите пароль"/>
                </StackPanel>

                <Button Content="Войти" Height="40" FontSize="16" 
                        HorizontalAlignment="Stretch" Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
